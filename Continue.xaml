<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="clickfree_Maui.Continue"
              BackgroundColor="#2a2c30">
    <VerticalStackLayout Padding="5">

        <Image Source="logo.png"  Margin="10,50,10,0" HeightRequest="40" WidthRequest="40" ></Image>
        <Label x:Name="userLabel" TextColor="White" Margin="0,10,0,0"> </Label>
        <Grid VerticalOptions="Center" Margin="0,5,0,0" Padding="5" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>
            <Button  Text="Continue" Grid.Row="0" BackgroundColor="#3E8EED"  Margin="0,25,0,0" TextColor="White" Command="{Binding ContinueCommand}" WidthRequest="180" />
            <Button  Text="Logout" Grid.Row="1" BackgroundColor="#3E8EED" Margin="0,10,0,0" TextColor="White"  Command="{Binding LogoutCommand}" WidthRequest="180" />

        </Grid>

    </VerticalStackLayout>


</ContentPage>